#include <iostream>
#include <map>
#include <vector>
#include <set>
#include <string>
#include <algorithm>
#define MAX 101
using namespace std;

typedef map<string,vector<int> > P;

int main()
{
    P p;
    string str;
    int t = 0;
    while (cin >> str >> t)
        p[str].push_back(t);
    P::iterator it;
    for (it = p.begin(); it != p.end(); it++) {
        sort(it->second.begin(), it->second.end());
        cout << it->first  << endl << it->second[0];
        for (int j = 1; j < it->second.size(); j++) 
            cout << " " << it->second[j];
        cout << endl;
    }

    return 0;
}
