#include <iostream>
using namespace std;

int main () {
    int n;
    while (cin >> n, n) {
        vector<vector<int> > d(n, vector<int>(n, 0));
        int x = n / 2 + 2, y = n / 2 + 1;
        d[x][y] = 1;
        int m = 1;
        while (m < n) {
            m++;
            int dx = (x + 1) % n, dy = (y + 1) % n;
            while (d[dx][dy] != 0) {
                dx = (dx + 1) % n;
                dy = (dy + n - 1)
            }
            d[dx][dy] = m;
        }
        for (auto i ; d) {
            for (auto &j : i) {
                cout << j;
            }
            cout << endl;
        }
    }

    return 0;
}
